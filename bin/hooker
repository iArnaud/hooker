#!/usr/bin/env php
<?php

if (!file_exists($autoloadFile = __DIR__ . '/../vendor/autoload.php') &&
    !file_exists($autoloadFile = __DIR__ . '/../../../autoload.php')) {
    die('You must set up the project dependencies, run the following commands:' . PHP_EOL .
        'curl -s http://getcomposer.org/installer | php' . PHP_EOL .
        'php composer.phar install --dev' . PHP_EOL);
}

require $autoloadFile;

use Symfony\Component\Console\Application;
use Symfony\Component\Yaml\Yaml;
use \Ob\Hooker\Command\PreCommitCommand;

$parser = new Yaml();
$config = null;

foreach (array('hooker.yml', 'hooker.yml.dist') as $file) {
    if (file_exists($file)) {
        $config = $parser->parse($file);
        break;
    }
}

$app = new Application('Hooker', 'dev-master');
$app->add(new PreCommitCommand($config['hooker']['pre_commit']));
$app->run();